{
  "name": "office_word_mcp",
  "displayName": "Office Word文档处理器",
  "description": "专业的Microsoft Word文档创建、编辑和管理工具，支持文档创建、内容添加、格式化、表格处理、图片插入等全面功能",
  "version": "1.1.7",
  "agentType": "mcp",
  "entryPoint": {
    "module": "mcpserver.Office-Word-MCP-Server-main.word_mcp_adapter",
    "class": "WordDocumentMCPServer"
  },
  "factory": {
    "create_instance": "create_word_document_mcp_server"
  },
  "capabilities": {
    "document_creation": {
      "description": "创建新的Word文档",
      "tools": ["create_document", "copy_document"]
    },
    "content_management": {
      "description": "添加和管理文档内容",
      "tools": ["add_paragraph", "add_heading", "add_table", "add_picture", "add_page_break"]
    },
    "text_formatting": {
      "description": "文本格式化和样式设置",
      "tools": ["format_text", "create_custom_style"]
    },
    "table_operations": {
      "description": "表格创建和格式化",
      "tools": ["add_table", "format_table"]
    },
    "document_analysis": {
      "description": "文档信息获取和分析",
      "tools": ["get_document_info", "get_document_text", "get_document_outline", "list_available_documents"]
    },
    "document_protection": {
      "description": "文档保护和安全",
      "tools": ["protect_document", "unprotect_document", "add_digital_signature"]
    },
    "advanced_features": {
      "description": "高级文档功能",
      "tools": ["add_footnote_to_document", "add_endnote_to_document", "convert_to_pdf", "merge_documents"]
    }
  },
  "inputSchema": {
    "type": "object",
    "properties": {
      "action": {
        "type": "string",
        "description": "要执行的操作类型"
      },
      "filename": {
        "type": "string",
        "description": "目标Word文档文件名"
      },
      "content": {
        "type": "string",
        "description": "要添加的内容"
      }
    }
  },
  "requirements": {
    "python": ">=3.8",
    "dependencies": [
      "python-docx>=1.1.2",
      "fastmcp>=2.8.1",
      "msoffcrypto-tool>=5.4.2",
      "docx2pdf>=0.1.8"
    ]
  },
  "examples": [
    {
      "description": "创建新文档",
      "input": {
        "action": "create_document",
        "filename": "我的报告.docx",
        "title": "项目报告",
        "author": "研天雪"
      }
    },
    {
      "description": "添加标题",
      "input": {
        "action": "add_heading",
        "filename": "我的报告.docx",
        "text": "第一章 项目概述",
        "level": 1
      }
    },
    {
      "description": "添加段落",
      "input": {
        "action": "add_paragraph",
        "filename": "我的报告.docx",
        "text": "这是一个关于AI助手项目的详细报告..."
      }
    }
  ]
}